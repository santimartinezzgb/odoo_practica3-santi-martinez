<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- Vista árbol -->
    <record id="view_lista_tareas_tree" model="ir.ui.view">
      <field name="name">lista.tareas.tree</field>
      <field name="model">lista.tareas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="estado"/>
          <field name="completada"/>
        </tree>
      </field>
    </record>

    <!-- Vista formulario -->
    <record id="view_lista_tareas_form" model="ir.ui.view">
      <field name="name">lista.tareas.form</field>
      <field name="model">lista.tareas</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="nombre"/>
              <field name="descripcion"/>
              <field name="estado"/>
              <field name="completada"/>
            </group>
          </sheet>
          <footer>
            <button name="action_iniciar" type="object" string="Iniciar" class="btn-primary"/>
            <button name="action_completar" type="object" string="Completar" class="btn-success"/>
            <button name="action_cancelar" type="object" string="Cancelar" class="btn-danger"/>
            <button name="action_reabrir" type="object" string="Reabrir"/>
          </footer>
        </form>
      </field>
    </record>

    <!-- Acción -->
    <record id="action_lista_tareas" model="ir.actions.act_window">
      <field name="name">Lista de Tareas</field>
      <field name="res_model">lista.tareas</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú principal -->
    <menuitem id="menu_lista_tareas_root" name="Lista de Tareas"/>

    <!-- Submenú que abre acción -->
    <menuitem id="menu_lista_tareas" name="Tareas"
              parent="menu_lista_tareas_root"
              action="action_lista_tareas"/>
  </data>
</odoo>
